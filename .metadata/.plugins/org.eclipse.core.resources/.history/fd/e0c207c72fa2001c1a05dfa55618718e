package com.site.siteagencia;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.site.siteagencia.entities.cadastro;
import com.site.siteagencia.repositorys.cadastroRepository;

import com.site.siteagencia.entities.destino;
import com.site.siteagencia.repositorys.destinoRepository;

import com.site.siteagencia.entities.passagens;
import com.site.siteagencia.repositorys.passagemRepository;

@SpringBootApplication
public class SiteagenciaApplication implements CommandLineRunner {
	
	@Autowired
	private cadastroRepository cadastroRepository;
	
	public static void main(String[] args) {
		SpringApplication.run(SiteagenciaApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		
		cadastro c1= new cadastro(null, "Juliana" , "036.280.236-09", "juliana123@gmail.com" , "(71) 98765-9263", "Salvador","Bahia");
		cadastro c2= new cadastro(null, "Henrique" , "123.290.245-10", "henriquesantine@gmail.com" , "(11) 99875-9227", "Jacaúna","São Paulo");
		cadastro c3= new cadastro(null, "Marília" , "036.280.236-09", "mariliasouza@gmail.com" , "(87) 99403-6896", "Petrolina","Pernanmbuco");
		
		cadastroRepository.save(c1);
		cadastroRepository.save(c2);
		cadastroRepository.save(c3);	
	
	
	destinoRepository destinoRepository;
		
		destino d1= new destino(null, "Alagoas" , "Sergipe");
		destino d2= new destino(null, "Gramado" , "Rio Grande do Sul");
		destino d3= new destino(null, "Feira de Santana" , "Bahia");
		
		destinoRepository.save(d1);
		destinoRepository.save(d2);
		destinoRepository.save(d3);	
  	
	
	passagemRepository passagemRepository;
	
		passagens p1= new passagens(null, "Petrolina", "Alagoas","26/03/22", "30/03/22", "398.90");
		passagens p2= new passagens(null, "Gramado", "Rio Grande do Sul", "15/03/22", "22/03/22", "459.90");
		passagens p3= new passagens(null, "Feira de Santana", "Salvador", "11/03/22", "14/03/22", "45.00");
		
		passagemRepository.save(p1);
		passagemRepository.save(p2);
		passagemRepository.save(p3);	
	} 
		 
}